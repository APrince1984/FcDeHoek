@model WebAppFcDeHoek.Models.RankingModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rangschikking Competitie</h2>

    <h4>Season : @Model.Season</h4>

<div>
    <table class="table table-bordered table-responsive table-hover">
        <tbody>
            <tr>
                <th class="TableTitle">Ploeg</th>
                <th class="TableTitle">Gespeeld</th>
                <th class="TableTitle">Gewonnen</th>
                <th class="TableTitle">Gelijk</th>
                <th class="TableTitle">Verloren</th>
                <th class="TableTitle">Doelptn voor</th>
                <th class="TableTitle">Doelptn tegen</th>
                <th class="TableTitle">Punten</th>
            </tr>

        @foreach (var rank in Model.Ranking)
        {
            var cssClass = rank.Team == "F.C. De Hoek" ? "prince" : "";
            <tr>
                <td>@rank.Team</td>
                <td>@rank.GamesPlayed</td>
                <td>@rank.GamesWon</td>
                <td>@rank.GamesDrawn</td>
                <td>@rank.GamesLost</td>
                <td>@rank.GoalsScored</td>
                <td>@rank.GoalsConceded</td>
                <td>@rank.Points</td>
            </tr>
        }

        </tbody>
    </table>
</div>

