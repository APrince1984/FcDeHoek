@using WebAppFcDeHoek.Structs
@model WebAppFcDeHoek.Models.HomeModel
@{
    ViewBag.Title = Model.TeamName;
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">
        @Model.TeamName is een voetbalclub actief in de @Model.CurrentDivision van het @Model.ConvenantName verbond.
        Thuiswedstrijden worden gespeeld op @Model.SportPark (@Model.Region). Supporters zijn altijd welkom! <br />
        Wedstrijden in het @Model.ConvenantName verbond worden afgewerkt op @Model.TimePeriod. <br/>
    </p>

    @if (Model.PreviousGame != null || Model.NextGame != null)
    {
        <p>
            
            <div class="divTableRow">
                @if (Model.PreviousGame != null)
                {
                    <div class="divTableCol-md-2">Vorige wedstrijd:</div>
                    <div class="divTableCol-md-2">@Model.PreviousGame.MatchDate.Date.ToString("dd/MM/yyyy")</div>
                    <div class="divTableCol-md-2">@Model.PreviousGameHomeTeam.Name - @Model.PreviousGameAwayTeam.Name</div>
                    <div class="divTableCol-md-2">@Model.PreviousGame.GoalsHomeTeam - @Model.PreviousGame.GoalsAwayTeam</div>
                }
                @if (Model.NextGame != null)
                {
                    <div class="divTableCol-md-2">Volgende wedstrijd:</div>
                    <div class="divTableCol-md-2">@Model.NextGame.MatchDate.Date.ToString("dd/MM/yyyy")</div>
                    <div class="divTableCol-md-2">@Model.NextGameHomeTeam.Name - @Model.NextGameAwayTeam.Name</div>
                    <div class="divTableCol-md-2">@Model.NextGame.GoalsHomeTeam - @Model.NextGame.GoalsAwayTeam</div>
                }
            </div>
            <br/>
            <table class="table table-bordered table-responsive table-hover">
                <tbody>

                @if (Model.PreviousGame != null)
                {
                    var cssClass = Model.PreviousGameResult == eResult.Won ? "goodresult" : Model.PreviousGameResult == eResult.Lost ? "badresult" : "";
                    <tr>
                        <td>Vorige wedstrijd:</td>
                        <td>@Model.PreviousGame.MatchDate.Date.ToString("dd/MM/yyyy")</td>
                        <td>@Model.PreviousGameHomeTeam.Name - @Model.PreviousGameAwayTeam.Name</td>
                        <td class="@cssClass">@Model.PreviousGame.GoalsHomeTeam - @Model.PreviousGame.GoalsAwayTeam</td>
                    </tr>
                }
                
                @if (Model.NextGame != null)
                {
                    <tr>
                        <td>Volgende wedstrijd:</td>
                        <td>@Model.NextGame.MatchDate.Date.ToString("dd/MM/yyyy")</td>
                        <td>@Model.NextGameHomeTeam.Name - @Model.NextGameAwayTeam.Name</td>
                        <td>@Model.NextGame.GoalsHomeTeam - @Model.NextGame.GoalsAwayTeam</td>
                    </tr>
                }

                </tbody>
            </table>
        </p>
    }

    
    
    <table hidden="hidden" class="table table-bordered table-responsive table-hover">
        <tbody>
      
   
    @foreach (var el in Model.AllTeams)
    {
            <tr>
                <td>@el.IdTeam</td>
                <td>@el.Name</td>
            </tr>
    }
        </tbody>
    </table>

    @*<p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

