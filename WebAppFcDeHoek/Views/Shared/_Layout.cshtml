@using WebAppFcDeHoek.Core
@using WebAppFcDeHoek.Structs
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @FcDeHoekRuntimeManager.ClubName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="header header-fixed-top">
    <div class="header FixedLogin"> @eEntry.EntryDescription(@Session["EntryStatus"] != null 
                                        ? int.TryParse(@Session["EntryStatus"].ToString(), out var entryStatus) 
                                            ? entryStatus 
                                            : eEntry.LogIn
                                        : eEntry.LogIn)</div>
    @*<div class="header headerImage"><img src="../../Images/TeamPic1.jpg"></div>*@
</div>
<div class="navbar navbar-inverse navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink(@eNavigation.GetNavigationDescription(eNavigation.Home), "Index", "Home")</li>
                <li>@Html.ActionLink(@eNavigation.GetNavigationDescription(eNavigation.Team), "Index", "UnderConstruction")</li>
                <li>@Html.ActionLink(@eNavigation.GetNavigationDescription(eNavigation.Calendar), "Index", "Calendar")</li>
                <li>@Html.ActionLink(@eNavigation.GetNavigationDescription(eNavigation.Ranking), "Index", "Ranking")</li>
                <li>@Html.ActionLink(@eNavigation.GetNavigationDescription(eNavigation.History), "Index", "UnderConstruction")</li>
                <li>@Html.ActionLink(@eNavigation.GetNavigationDescription(eNavigation.Links), "Index", "Links")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - @FcDeHoekRuntimeManager.ClubName</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
